                  <div class="form-group col-md-4">
                    <label for="billNum">Bill No.
                      <span style="color: red;">*</span></label>
                    <input
                      type="text"
                      class="form-control"
                      id="billNum"
                      name="billNum"
                      placeholder="Bill Number"
                      value="1"
                      disabled
                    />
                  </div>
                  <div class="form-group col-md-4">
                    <label for="billDate">Date
                      <span style="color: red;">*</span></label>
