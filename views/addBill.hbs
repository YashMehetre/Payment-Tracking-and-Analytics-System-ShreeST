                <div class="form-row">
                  <div class="form-group col-md-8">
                    <label for="billDate">Vendor Firm
                      <span style="color: red;">*</span></label>
                    <select
                      class="custom-select"
                      id="vendorFirmName"
                      name="vendorFirmName"
                      required
                    >
                      <option value="">Choose..</option>
                    </select>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="billGoodsType">Goods Type
                      <span style="color: red;">*</span></label>
                    <select
                      id="billGoodsType"
                      name="billGoodsType"
                      class="form-control"
                      disabled
                    >
                      <option selected>Pomegranate</option>
                      <option>Onion</option>
                    </select>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="billTotalBoxes">Total Boxes
                      <span style="color: red;">*</span></label>
                    <input
                      type="number"
                      class="form-control"
                      id="billTotalBoxes"
                      name="billTotalBoxes"
                      placeholder="Total Boxes"
                    />
                  </div>
                  <div class="form-group col-md-4">
                    <label for="billWeightPerBox">Weight (kg per Box)
                      <span style="color: red;">*</span></label>
                    <select
                      id="billWeightPerBox"
                      name="billWeightPerBox"
                      class="form-control"
                    >
                      <option selected>9.5</option>
                      <option>10</option>
                      <option>8.5</option>
                      <option>20</option>
                    </select>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="billTotalWeight">Total Weight (kg)
                      <span style="color: red;">*</span></label>
                    <input
                      type="float"
                      class="form-control"
                      id="billTotalWeight"
                      name="billTotalWeight"
                      placeholder="0"
                      disabled
                    />
                  </div>

                </div>
                <div class="form-row">
