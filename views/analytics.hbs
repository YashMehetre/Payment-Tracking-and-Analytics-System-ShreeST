<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="white-box">
                <h6>Choose a date range to view analytics:</h6>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="startDate">Start Month <span style="color: red;">*</span></label>
                        <input type="date" class="form-control" id="startDate" name="startDate" />
                    </div>
                    <div class="form-group col-md-4">
                        <label for="endDate">End Month <span style="color: red;">*</span></label>
                        <input type="date" class="form-control" id="endDate" name="endDate" />
                    </div>
                </div>
                <button type="submit" class="btn btn-success" id="showAnalytics">Show Analytics</button>
            </div>
        </div>
    </div>

    <div class="analytics" style="display: none;">
        <div class="col-12">
            <div class="white-box">
                <h3>Commodity Price Trends</h3>
                <div id="commodityPriceTrends" class="chart"></div>
            </div>
        </div>

        <div class="col-12">
            <div class="white-box">
                <h3>Payment Trends</h3>
                <div id="paymentTrends" class="chart"></div>
            </div>
        </div>

        <div class="col-12">
            <div class="white-box">
                <h3>Market Demand Trends</h3>
                <div id="marketDemandTrends" class="chart"></div>
            </div>
        </div>

        <div class="col-12">
            <div class="white-box">
                <h3>Seasonal Profitability</h3>
                <div id="seasonalProfitability" class="chart"></div>
            </div>
        </div>
    </div>
</div>

<!-- External Scripts -->
<script src="https://www.gstatic.com/charts/loader.js"></script>
<script src="/js/analytics.js"></script>