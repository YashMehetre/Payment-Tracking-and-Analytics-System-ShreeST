<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                {{!-- Payment Form --}}
                <form id="addPaymentForm">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="paymentDate">Date <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="paymentDate" name="paymentDate" required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="vendorFirmName">Vendor Firm <span class="text-danger">*</span></label>
                            <select class="custom-select" id="vendorFirmName" name="vendorFirmName" required>
                                <option value="">Choose...</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="paymentModeName">Payment Mode <span class="text-danger">*</span></label>
                            <select id="paymentModeName" name="paymentModeName" class="form-control" required>
                                <option value="">Choose...</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="paymentReceivedAmt">Party Amount (₹) <span class="text-danger">*</span></label>
                            <input type="number" step="0.01" class="form-control" id="paymentReceivedAmt" name="paymentReceivedAmt" placeholder="Amount Received" required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="paymentMoreDetails">Extra Details (Optional)</label>
                            <textarea class="form-control" id="paymentMoreDetails" name="paymentMoreDetails"></textarea>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success" id="addPaymentData">Add Payment</button>
                    &nbsp; &nbsp;
                    <button type="button" class="btn btn-primary" id="cancelBtn">Cancel</button>
                </form>
                
                <br />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <button class="btn btn-danger" onclick="scrollToTable()">Delete an Existing Payment Mode</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Search Payment Section --}}
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                <h3 class="box-title">Search Payment Details</h3>
                
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="paymentSearchFromDate">Date <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="paymentSearchFromDate" name="paymentSearchFromDate" />
                    </div>
                    <div class="form-group col-md-8">
                        <label for="vendorFirmNameSearch">Vendor Firm Name <span class="text-danger">*</span></label>
                        <select id="vendorFirmNameSearch" name="vendorFirmNameSearch" class="form-control">
                            <option value="">Choose...</option>
                        </select>
                    </div>
                    <button type="button" class="btn btn-info" id="searchPaymentData">Search</button>
                </div>

                <h3 class="box-title"><br />Payment Details (Recent)</h3>
                <div class="table-responsive">
                    <table class="table text-nowrap">
                        <thead>
                            <tr>
                                <th>Payment Id</th>
                                <th>Vendor Firm</th>
                                <th>Date</th>
                                <th>Payment Mode</th>
                                <th>Party Amount (₹)</th>
                                <th>Details</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="paymentDetails"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/addPayment.js"></script>

